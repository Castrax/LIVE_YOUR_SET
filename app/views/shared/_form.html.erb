<%= simple_form_for @movie_set, defaults: { input_html: { class: 'default_class' } } do |f| %>
  <%= f.input :title, input_html: { class: 'special' } %>
  <%= f.input :description, input_html: { maxlength: 500 } %>
  <%= f.input :media_name %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :address %>
  <%= f.input :price_per_day %>
  <%= f.button :submit %>
<% end %>
