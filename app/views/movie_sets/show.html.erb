<div class="row">
    <div class="col-sm-1">
      <%= link_to '<i class="fas fa-arrow-left"></i>'.html_safe, movie_sets_path %>
    </div>
    <div class="col-sm-11" id="carousel">
      <div id="carousel-show-movie-set" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @movie_set.photos.each do |photo|%>
          <div class="carousel-item <%= "active" if photo == @movie_set.photos.first %>">
            <%= cl_image_tag photo.key, class: "d-block w-100", style: "height: 400px;" %>
          </div>
        <% end %>

      </div>
      <a class="carousel-control-prev" href="#carousel-show-movie-set" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-show-movie-set" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

<div class="container">
    <div class="row">
      <div class="col-sm-8">
        <div id="show-movie-set-title">
          <h1><%= @movie_set.title %></h1>
        </div>
        <div id="show-movie-set-address">
          <p><i class="fas fa-map-marked-alt"></i><%=  @movie_set.address %></p>
        </div>
        <div class="container box-description">
          <div class="card description-card">
              <i class="fas fa-user-friends description-icon"></i>
            <p>max 1500 people</p>
        </div>
        <div class="card description-card">
          <p>
            <i class="fas fa-ruler-combined description-icon"></i>
          </p>
          <p>3000 square meters</p>
        </div>
        <div class="card description-card">
          <p>
            <i class="fas fa-parking description-icon"></i>
          </p>
          <p>Free parking</p>
        </div>
        </div>
        <div id="show-movie-set-description">
          <p><%= @movie_set.description %></p>
        </div>
      </div>

    <div class="col-sm-4" style="border-radius: 4px">
      <div class="card p-3 text-center">
        <div class="p-2 my-3">
          <p style="text-transform: uppercase;"><strong><em><%= @movie_set.media_name %></strong></em></p>
        </div>
        <div class="p-2 my-3">
          <p><span id="price-per-day"><%= @movie_set.price_per_day %></span>$ / day</p>
        </div>
        <div class="p-2 my-3">
          <%= simple_form_for [@movie_set, @booking] do |f| %>
             <%= f.input :start_date, as: :string, required: false, placeholder: "From when?", input_html: {class: "datepicker", id:"start-date"} %>
            <%= f.input :end_date, as: :string, required: false, placeholder: "To when?", input_html: {class: "datepicker", id:"end-date"} %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :status, value: "upcoming" %>
            <%= f.submit "add a review", class: "btn btn-primary" %>
          <% end %>
          <%#= simple_form_for :search, html: { class: 'form-inline' }, method: :get do |f| %>
            <%#= f.input :dates, label: false, placeholder: "When to when?", input_html: { class: "datepicker"} %>
          <%# end %>
          <div class="p-2 mt-3">
            <p><strong>Total: <span id="total-price"></span>$</strong></p>
          </div>
        <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#exampleModalCenter">
          Book
        </button>
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">YOUR BOOKING</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p style="text-transform: uppercase;"><strong><%= @movie_set.title %></strong></p>
                <p><%= @movie_set.address %></p>
                <p id="reservation-days"></p>
              </div>
              <div class="modal-footer justify-content-center">
                <%= link_to "Confirm", dashboard_path(@booking), class: "btn btn-flat" %>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
