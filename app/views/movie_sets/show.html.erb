<div class="container">
  <%= link_to "Back", movie_sets_path, class: "btn btn-flat" %>
  <div id="carousel-show-movie-set" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @movie_set.photos.each do |photo|%>
      <div class="carousel-item <%= "active" if photo == @movie_set.photos.first %>">
        <%= cl_image_tag photo.key, class: "d-block w-100", style: "height: 400px;" %>
      </div>
    <% end %>

  </div>
  <a class="carousel-control-prev" href="#carousel-show-movie-set" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-show-movie-set" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class="row">
    <div class="col-sm-8">
      <div id="show-movie-set-title">
        <h2><%= @movie_set.title %></h2>
      </div>

      <div id="show-movie-set-description">
        <p><%= @movie_set.description %></p>
      </div>
    </div>

    <div class="col-sm-4 d" style="border-radius: 4px">
      <div class="card p-3 text-center">
        <div class="p-2 my-3">
          <p style="text-transform: uppercase;"><strong><em><%= @movie_set.media_name %></strong></em></p>
        </div>
        <div class="p-2 my-3">
          <p><%= @movie_set.price_per_day %>$ / day</p>
        </div>
        <div class="p-2 my-3">
          <%= simple_form_for :search, html: { class: 'form-inline' }, method: :get do |f| %>
            <%= f.input :dates, label: false, placeholder: "When to when?", input_html: { class: "datepicker"} %>
            <%= f.submit "Go", class: "btn btn-primary" %>
          <% end %>
          <div class="p-2 mt-3">
            <p>Total: <%= @movie_set.price_per_day * 5 %>$</p>
          </div>
        </div>
        <%= link_to "Book", dashboard_path(@booking), class: "btn btn-primary btn-block mb-3" %>
      </div>
    </div>
  </div>
</div>

