<div class="container">
  <div class="main">
    <h2>Hello <%= current_user.first_name %></h2>
    <p>Welcome to your dashboard, please see below the list of your marvellous sets, and all your past and upcoming bookings in our platform.</p>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active tab-link-custom" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">My movie sets</a>
      </li>
      <li class="nav-item">
        <a class="nav-link tab-link-custom" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">My booking</a>
      </li>
      <hr />
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="line">
          <div class="movies">
             <% @movie_sets.each do |m| %>
              <div class="card" style="width: 18rem;">
                <%= link_to movie_set_path(m) do %>
                 <%= cl_image_tag m.photos.first.key, class: "card-img-top" %>
                  <div class="card-body">
                    <h5 class="card-title"><%= m.title %></h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  </div>
                <% end %>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><i class="fas fa-film"></i><%= m.media_name %></li>
                  <li class="list-group-item"><i class="fas fa-map-marked-alt"></i><%= m.address %></li>
                  <li class="list-group-item">Ratings : <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i></li>
                </ul>
                <div class="card-body">
                  <p><%= link_to edit_movie_set_path(m), class:"card-link" do %>
                    <i class="fas fa-edit"></i>Update the set
                  <% end %></p>
                  <p><%= link_to movie_set_path(m), class:"card-link", method: :delete, data: { confirm: "Are you sure?"} do %>
                    <i class="fas fa-trash-alt"></i>Delete the set
                  <% end %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="row">
          <div class="col">
            <% @bookings.each do |booking| %>
              <div class="card-dashboard">
                <%= cl_image_tag booking.movie_set.photos.first.key %>
                <div class="justify-dashboard">
                  <div class="card-dashboard-infos">
                    <h2><%= booking.movie_set.title %></h2>
                    <div class="infos">
                      <div class="dates">
                        <p>Du <strong><%= booking.start_date %></strong> au <strong><%= booking.end_date %></strong></p>
                        <span class="total_price"><%= booking.total_price %> â‚¬</span>
                      </div>
                    </div>
                  </div>
                  <div class="status">
                    <% if booking.status == "upcoming" %>
                      <span class="badge badge-secondary"><%= booking.status %></span>
                    <% else %>
                      <span class="badge badge-primary"><%= booking.status %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

