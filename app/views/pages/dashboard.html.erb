<div class="container">
  <div class="row">
    <div class="col">
      <% @bookings.each do |booking| %>
        <div class="card-dashboard">
          <%= cl_image_tag booking.movie_set.photos.first.key %>
          <div class="justify-dashboard">
            <div class="card-dashboard-infos">
              <h2><%= booking.movie_set.title %></h2>
              <div class="infos">
                <div class="dates">
                  <p>Du <strong><%= booking.start_date %></strong> au <strong><%= booking.end_date %></strong></p>
                  <span class="total_price"><%= booking.total_price %> â‚¬</span>
                </div>
              </div>
            </div>
            <div class="status">
              <% if booking.status == "upcoming" %>
                <span class="badge badge-secondary"><%= booking.status %></span>
              <% else %>
                <span class="badge badge-primary"><%= booking.status %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
